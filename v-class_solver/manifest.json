{
  "manifest_version": 3,
  "name": "V-Class Auto Solver",
  "version": "2.1",
  "description": "Asisten AI profesional dengan Floating Menu & Context Menu.",
  "permissions": [
    "contextMenus", 
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*", 
    "*://v-class.gunadarma.ac.id/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://v-class.gunadarma.ac.id/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}